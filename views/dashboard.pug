  body
    nav
      .nav-wrapper.deep-orange
        .container
          a.brand-logo.center(href="#") 9ja Food Tracker
          ul.left
            li
              a.clear-btn.btn.orange.lighten-1(href="#") Clear All
          ul.right
            li
              a#logout.clear-btn.btn.grey.darken-3(href="") Log Out
    br
    .container
      // Form Card
      .card
        .card-content
          span.card-title.center Add Your Today Meal ðŸ˜‹ðŸ¥°
          form#foodForm.col
            .row
              .input-field.col.s12
                input#item-name(type="text", placeholder="Search for food...." required)
                label(for="item-name") Meals
              button.add-btn.btn.blue.darken-3
                i.fa.fa-plus 
                |  Add Meal
      // Calorie Count
      h4.center-align Total Nutrition Counts:
      ul.total-count.center   
    
      // - Item List
      table.collection.striped
        thead
          tr
            th Meals
            th Calories (g)
            th Fat (g)
            th Carbohydrates (g)
            th Protein (g)
            th Delete
        tbody#item-list
